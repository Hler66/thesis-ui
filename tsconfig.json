{
  "compilerOptions": {
    /*生成.d.ts文件*/
    "declaration": true,
    /*.d.ts文件输出目录*/
    "declarationDir": "./dist/types",
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["./**/*.*", "./docs/.vitepress/**/*", "./shims-vue.d.ts"],
  "exclude": ["node_modules"]
}
